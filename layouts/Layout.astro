---
interface Props {
  pageTitle?: string;
  siteTitle?: string;
  description?: string;
  keywords?: string;
  since?: string;
  footerIcon?: {
    alt: string;
    src: string;
  };
}

const { pageTitle, siteTitle, description, keywords, since, footerIcon } =
  Astro.props;
const currentYear = new Date().getFullYear();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    {description && <meta name="description" content={description} />}
    {keywords && <meta name="keywords" content={keywords.join()} />}
    <title>{pageTitle}{pageTitle && siteTitle && " | "}{siteTitle}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/style.css" />
    <script is:inline src="/script.js" defer></script>
  </head>
  <body>
    <slot name="navbar" />
    <slot />
    <footer>
      <div>
        <slot name="footer" />
      </div>
      <div>
        {footerIcon ? <img id="footer-icon" {...footerIcon} /> : ""}
        <p id="footer-site-title">{siteTitle}</p>
        <p id="footer-since">
          {
            since
              ? since.endsWith(String(currentYear))
                ? since
                : `${since} - ${currentYear}`
              : currentYear
          }
        </p>
        <p id="footer-developer">
          Site développé par <a href="https://rimarok.com">rimarok.com</a>,
          éco-conception web
        </p>
      </div>
    </footer>
  </body>
</html>
